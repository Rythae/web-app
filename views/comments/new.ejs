<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Add New Comment to <%= product.name %></h1>
        <div id="form-key">
            <form action="/products/<%= product._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
                <p><a href="/products" class="btn btn-xs btn-danger">Go Back</a></p> 
            </div>
        
    </div>
</div>


























